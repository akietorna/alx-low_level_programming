#include "lists.h"
#include <stdlib.h>

/**
 *add_nodeint - adds a new node to the beginning of a linked list
 *@head: the head of the list
 *@n: integer
 *Return: poineter to the new node
 */

listint_t *add_nodeint(listint_t **head, const int n)
{
	listint_t *temp = *head;

	*head = malloc(sizeof(listint_t));
	if (*head == NULL)
	{
		return (NULL);
	}
	(*head)->n = n;
	(*head)->next = temp;
	return (*head);
}

