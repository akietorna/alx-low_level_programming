#include "main.h"
#include <stdlib.h>

/**
 *set_bit - sets a bit at an index of a number to 1
 *@n: the number
 *@index: the index
 *Return: 1-success -1-failure
 */

int set_bit(unsigned long int *n, unsigned int index)
{
	if (index > (sizeof(*n) * 8) - 1)
	{
		return (-1);
	}
	*n = *n | (1 << index);
	return(1);
}
